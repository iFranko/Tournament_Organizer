@model Tournament_Organizer.Models.Tournament_Leaderboard

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Tournament Leaderboard</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            @if (TempData["teamEven"] != null)
            {
                    <div class="alert alert-danger alert-dismissible fade show">
                    <strong>Messgae!</strong><em> @TempData["teamEven"]</em>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
            }
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Team_One_ID" />
            <div class="form-group">
                <label asp-for="Team_One_Score" class="control-label"></label>
                <input asp-for="Team_One_Score" class="form-control" min=0 max=50 />
                <span asp-validation-for="Team_One_Score" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Team_Two_ID" />
            <div class="form-group">
                <label asp-for="Team_Two_Score" class="control-label"></label>
                <input asp-for="Team_Two_Score" class="form-control" min=0 max=50 />
                <span asp-validation-for="Team_Two_Score" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Tournament_ID" />
            <div class="form-group">
                <input type="hidden" asp-for="Stage" class="form-control" style=" pointer-events: none;" />
            </div>
            <div class="form-group">
                <label asp-for="Game_Date" class="control-label"></label>
                <input asp-for="Game_Date" class="form-control" />
                <span asp-validation-for="Game_Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameNotes" class="control-label"></label>
                <input asp-for="GameNotes" class="form-control" />
                <span asp-validation-for="GameNotes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Game_Status"></label>
                <select asp-for="Game_Status" class="form-control">
                    <option value="Completed" selected>Completed</option>
                    <option value="Terminate">Terminated</option>
                </select>
                <span asp-validation-for="Game_Status" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
